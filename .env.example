# LLM API Keys (at least one required)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Default LLM Provider: openai, anthropic, or ollama (for local)
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-5-sonnet-20241022

# Server Configuration
HOST=0.0.0.0
PORT=3025

# Tailscale (for prod connection)
# Your Tailscale IP will be something like 100.x.x.x
TAILSCALE_IP=100.100.100.100

# Chess AI Service (existing NestJS service)
CHESS_AI_URL=http://localhost:3020

# Whisper Configuration
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large

# Video Processing
FRAME_SAMPLE_RATE=1
# Extract 1 frame per second by default

# Logging
LOG_LEVEL=INFO
